---
import AssetCard from "@/components/AssetCard.astro";
import Layout from "@/layouts/Main.astro";
import { ASSET_URL, type Asset } from "@/lib/asset";
import { Wrench } from "lucide-astro";
export const prerender = false;
const tools: Asset[] = await (await fetch(`${ASSET_URL}/json/tools.json`)).json();
---

<Layout>
  <div class="flex justify-center py-8 flex-col items-center">
    <div class="text-4xl font-bold text-text inline-flex mb-4">
      <Wrench class="size-12 mr-2" />
      Tools
    </div>
    <div class="flex flex-wrap justify-center gap-4 flex-row mt-30">
      {tools.sort((a, b) => (a.name > b.name ? 1 : -1)).map((tool) => <AssetCard asset={tool} />)}
    </div>
  </div>
</Layout>
<script src="@/lib/asset-script.ts"></script>
